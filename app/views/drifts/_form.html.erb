<%= form_for drift do |f| %>
  <% if drift.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(drift.errors.count, "error") %>.</h4>
      <ul>
        <% drift.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(drift.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "drift title" %>
  <%  end %>
  <%= form_group_tag(drift.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "drift tekst" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Opret drift besked", class: 'btn btn-success' %>
  </div>
<% end %>